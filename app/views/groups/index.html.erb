<% @header="Groups" %>
<div class="groups index">

  <%= link_to("Create New Group", { :action => 'new' }, :class => 'action new btn btn-default') %><hr>

  <table class="listing" summary="Group list">
    <tr class="header">
      <th>Group</th>
      <th>Category</th>
      <th>Phone Number</th>
      <th>Details</th>
      <th>Actions</th>
    </tr>
    <% @groups.each do |group| %>
    <tr>
      <td><%= group.group_name %></td>
      <td><%= group.category %></td>
      <td><%= group.phone_number %></td>
      <td><%= group.details %></td>
      <td class="actions">
        <%= link_to("Show", { :action => 'show', :id => group.id }, :class => 'action show') %>
        <%= link_to("Edit", { :action => 'edit', :id => group.id }, :class => 'action edit') %>
        <%= link_to("Delete", { :action => 'delete', :id => group.id }, :class => 'action delete') %>
      </td>
    </tr>
    <% end %>
  </table>
</div>
