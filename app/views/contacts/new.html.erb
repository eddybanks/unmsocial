<% @header="Contact Us" %>

<div class="row">

  <div class="contacts form col-xs-offset-2 form col-xs-8">

    <p> You can contact us by leaving a message below.</p>
    <p> Constructive comments, questions and suggestions are welcome. </p>
    <p> Contact information for groups and events can be acquired from the individual group and event pages. </p><br><br>

    <%= form_for(:contact, :url => { :action => 'create' }) do |f| %>

    <div class="form-group">
      <label for="name">Name</label>
      <%= f.text_field(:name, class: 'form-control') %>
    </div>

    <div class="form-group">
      <label for="email">email</label>
      <%= f.text_field(:email, default: @email, class: 'form-control', placeholder: "Please enter your unm email address here") %>
      <% current_user_email %>
    </div>

    <div class="form-group">
      <label for="message">Message</label>
      <%= f.text_area(:message, size: '15x15', class: 'form-control') %>
    </div>

    <div class="form-buttons">
      <%= submit_tag("Send Message", class: 'btn btn-default') %>
    </div>

    <% end %>
  </div>

</div>
