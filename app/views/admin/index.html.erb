<% @header = "Admin" %>


<div class="col-md-12 content">
  <div class="panel panel-default">
    <div class="panel-heading">
      Dashboard
    </div>
    <div class="panel-body">
      <div class="row">
        <div class="col-md-12">
          <h2><a class="btn btn-primary" data-toggle="collapse" href="#grouptable" aria-expanded="false" aria-controls="grouptable">Groups</a></h2>
          <div id="grouptable" class="table-responsive collapse">

            <table class="table table-striped">

              <thead>

                <th><input type="checkbox" class="checkall" /></th>
                <th>Name</th>
                <th>Category</th>
                <th>Contact</th>
                <th>Details</th>
                <th>Created at</th>
                <th>Updated at</th>
                <th colspan='2'>Actions</th>
              </thead>

              <tbody>

                <% @groups.each do |group| %>
                <tr>
                  <td><input type="checkbox" class="checkthis" /></td>
                  <td><%= group.group_name %></td>
                  <td><%= group.category %></td>
                  <td><%= group.phone_number %></td>
                  <td><%= group.details %></td>
                  <td><%= group.created_at %></td>
                  <td><%= group.updated_at %></td>
                  <td><p data-placement="top" data-toggle="tooltip" title="Edit"><button class="btn btn-primary btn-xs" data-title="Edit" data-toggle="modal" data-target="#edit" ><span class="glyphicon glyphicon-pencil"></span></button></p></td>
                  <td><p data-placement="top" data-toggle="tooltip" title="Delete"><button class="btn btn-danger btn-xs" data-title="Delete" data-toggle="modal" data-target="#delete" ><span class="glyphicon glyphicon-trash"></span></button></p></td>
                </tr>

                <% end %>

              </tbody>

            </table>

            <div class="clearfix"></div>
            <ul class="pagination pull-right">
              <li class="disabled"><a href="#"><span class="glyphicon glyphicon-chevron-left"></span></a></li>
              <li class="active"><a href="#">1</a></li>
              <li><a href="#">2</a></li>
              <li><a href="#">3</a></li>
              <li><a href="#">4</a></li>
              <li><a href="#">5</a></li>
              <li><a href="#"><span class="glyphicon glyphicon-chevron-right"></span></a></li>
            </ul>

          </div>

        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <h2><a class="btn btn-primary" data-toggle="collapse" href="#contacts_table" aria-expanded="false" aria-controls="contacts_table">Messages</a></h2>
          <div id="contacts_table" class="table-responsive collapse">

            <table class="table table-striped">

              <thead>

                <th><input type="checkbox" class="checkall" /></th>
                <th>Name</th>
                <th>Message</th>
                <th>Created at</th>
                <th>Updated at</th>
                <th colspan='3'>Actions</th>
              </thead>

              <tbody>

                <% @contacts.each do |contact| %>
                <tr>
                  <td><input type="checkbox" class="checkthis" /></td>
                  <td><%= contact.name %></td>
                  <td><%= contact.message %></td>
                  <td><%= contact.email %></td>
                  <td><%= contact.created_at %></td>
                  <td><%= contact.updated_at %></td>
                  <td><p data-placement="top" data-toggle="tooltip" title="Email"><button class="btn btn-primary btn-xs" data-title="Email" data-toggle="modal" data-target="#edit" ><span class="glyphicon glyphicon-envelope"></span></button></p></td>
                  <td><p data-placement="top" data-toggle="tooltip" title="Edit"><button class="btn btn-primary btn-xs" data-title="Edit" data-toggle="modal" data-target="#edit" ><span class="glyphicon glyphicon-pencil"></span></button></p></td>
                  <td><p data-placement="top" data-toggle="tooltip" title="Delete"><button class="btn btn-danger btn-xs" data-title="Delete" data-toggle="modal" data-target="#delete" ><span class="glyphicon glyphicon-trash"></span></button></p></td>
                </tr>

                <% end %>

              </tbody>

            </table>

            <div class="clearfix"></div>
            <ul class="pagination pull-right">
              <li class="disabled"><a href="#"><span class="glyphicon glyphicon-chevron-left"></span></a></li>
              <li class="active"><a href="#">1</a></li>
              <li><a href="#">2</a></li>
              <li><a href="#">3</a></li>
              <li><a href="#">4</a></li>
              <li><a href="#">5</a></li>
              <li><a href="#"><span class="glyphicon glyphicon-chevron-right"></span></a></li>
            </ul>

          </div>

        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <h2><a class="btn btn-primary" data-toggle="collapse" href="#events_table" aria-expanded="false" aria-controls="events_table">Events</a></h2>
          <div id="events_table" class="table-responsive collapse">

            <table class="table table-striped">

              <thead>

                <th><input type="checkbox" class="checkall" /></th>
                <th>Name</th>
                <th>Venue</th>
                <th>Time</th>
                <th>Capacity</th>
                <th>Category</th>
                <th>Contact</th>
                <th>Details</th>
                <th>Created by</th>
                <th>Created at</th>
                <th>Updated at</th>
                <th colspan='3'>Actions</th>
              </thead>

              <tbody>

                <% @events.each do |event| %>
                <tr>
                  <td><input type="checkbox" class="checkthis" /></td>
                  <td><%= event.name %></td>
                  <td><%= event.venue %></td>
                  <td><%= event.time %></td>
                  <td><%= event.capacity %></td>
                  <td><%= event.category %></td>
                  <td><%= event.phone_number %></td>
                  <td><%= event.details %></td>
                  <td><%= event.created_by %></td>
                  <td><%= event.created_at %></td>
                  <td><%= event.updated_at %></td>
                  <td><p data-placement="top" data-toggle="tooltip" title="Email"><button class="btn btn-primary btn-xs" data-title="Email" data-toggle="modal" data-target="#edit" ><span class="glyphicon glyphicon-envelope"></span></button></p></td>
                  <td><p data-placement="top" data-toggle="tooltip" title="Edit"><button class="btn btn-primary btn-xs" data-title="Edit" data-toggle="modal" data-target="#edit" ><span class="glyphicon glyphicon-pencil"></span></button></p></td>
                  <td><p data-placement="top" data-toggle="tooltip" title="Delete"><button class="btn btn-danger btn-xs" data-title="Delete" data-toggle="modal" data-target="#delete" ><span class="glyphicon glyphicon-trash"></span></button></p></td>
                </tr>

                <% end %>

              </tbody>

            </table>

            <div class="clearfix"></div>
            <ul class="pagination pull-right">
              <li class="disabled"><a href="#"><span class="glyphicon glyphicon-chevron-left"></span></a></li>
              <li class="active"><a href="#">1</a></li>
              <li><a href="#">2</a></li>
              <li><a href="#">3</a></li>
              <li><a href="#">4</a></li>
              <li><a href="#">5</a></li>
              <li><a href="#"><span class="glyphicon glyphicon-chevron-right"></span></a></li>
            </ul>

          </div>

        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <h2><a class="btn btn-primary" data-toggle="collapse" href="#users_table" aria-expanded="false" aria-controls="users_table">Users</a></h2>
          <div id="users_table" class="table-responsive collapse">

            <table class="table table-striped">

              <thead>

                <th><input type="checkbox" class="checkall" /></th>
                <th>Name</th>
                <th>First name</th>
                <th>Last name</th>
                <th>Date of Birth</th>
                <th>Gender</th>
                <th>Address</th>
                <th>Email</th>
                <th>Phone Number</th>
                <th>Created at</th>
                <th>Updated at</th>
                <th colspan='3'>Actions</th>
              </thead>

              <tbody>

                <% @users.each do |user| %>
                <tr>
                  <td><input type="checkbox" class="checkthis" /></td>
                  <td><%= user.username %></td>
                  <td><%= user.fname %></td>
                  <td><%= user.lname %></td>
                  <td><%= user.date_of_birth %></td>
                  <td><%= user.gender %></td>
                  <td><%= user.address %></td>
                  <td><%= user.email %></td>
                  <td><%= user.phone_number %></td>
                  <td><%= user.created_at %></td>
                  <td><%= user.updated_at %></td>
                  <td><p data-placement="top" data-toggle="tooltip" title="Email"><button class="btn btn-primary btn-xs" data-title="Email" data-toggle="modal" data-target="#edit" ><span class="glyphicon glyphicon-envelope"></span></button></p></td>
                  <td><p data-placement="top" data-toggle="tooltip" title="Edit"><button class="btn btn-primary btn-xs" data-title="Edit" data-toggle="modal" data-target="#edit" ><span class="glyphicon glyphicon-pencil"></span></button></p></td>
                  <td><p data-placement="top" data-toggle="tooltip" title="Delete"><button class="btn btn-danger btn-xs" data-title="Delete" data-toggle="modal" data-target="#delete" ><span class="glyphicon glyphicon-trash"></span></button></p></td>
                </tr>

                <% end %>

              </tbody>

            </table>

            <div class="clearfix"></div>
            <ul class="pagination pull-right">
              <li class="disabled"><a href="#"><span class="glyphicon glyphicon-chevron-left"></span></a></li>
              <li class="active"><a href="#">1</a></li>
              <li><a href="#">2</a></li>
              <li><a href="#">3</a></li>
              <li><a href="#">4</a></li>
              <li><a href="#">5</a></li>
              <li><a href="#"><span class="glyphicon glyphicon-chevron-right"></span></a></li>
            </ul>

          </div>

        </div>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="edit" tabindex="-1" role="dialog" aria-labelledby="edit" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">

      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></button>
        <h4 class="modal-title custom_align" id="Heading">Edit Group Detail</h4>
      </div>

      <div class="modal-body">

      </div>

      <div class="modal-footer ">
        <button type="button" class="btn btn-warning btn-lg" style="width: 100%;"><span class="glyphicon glyphicon-ok-sign"></span> Update</button>
      </div>

    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div>



<div class="modal fade" id="delete" tabindex="-1" role="dialog" aria-labelledby="edit" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">

      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></button>
        <h4 class="modal-title custom_align" id="Heading">Delete this entry</h4>
      </div>

      <div class="modal-body">
        <div class="alert alert-danger"><span class="glyphicon glyphicon-warning-sign"></span> Are you sure you want to delete this Group?</div>
      </div>

      <div class="modal-footer ">
        <button type="button" class="btn btn-success" ><span class="glyphicon glyphicon-ok-sign"></span> Yes</button>
        <button type="button" class="btn btn-default" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span> No</button>
      </div>

    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div>
