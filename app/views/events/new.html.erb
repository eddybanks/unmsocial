<div class="events new">
  <h2>Events</h2>

  <%= link_to("Back to List", { :action => 'index' }, :class => 'back-link') %>

  <div class="row">
    <div class="col-xs-offset-1 col-xs-9">
      <%= form_for(:event, :url => { :action => 'create' }) do |f| %>
          <div class="form-group">
            <label for="name">Event Name</label>
            <%= f.text_field(:name, class: 'form-control') %>
          </div>

          <div class="form-group">
            <label for="venue">Venue</label>
            <%= f.text_field(:venue, class: 'form-control') %>
          </div>

          <div class="form-group">
            <label for="time">Time</label>
            <%= f.datetime_select(:time, default: @time) %>
          </div>

          <div class="form-group">
            <label for="type">Type</label>
            <%= f.select :category, ["Select Type", "meeting", "conference", "party", "camping trip", "other"]%>
          </div>

          <div class="form-group">
            <label for="capacity">Capacity</label>
            <%= f.text_field(:capacity, class: 'form-control') %>
          </div>

          <div class="form-group">
            <label for="number">Phone Number</label>
            <%= f.text_field(:phone_number, class: 'form-control') %>
          </div>

          <div class="form-group">
            <label for="details">Details</label>
            <%= f.text_area(:details, size: '15x15',class: 'form-control') %>
          </div>


          <div class="form-buttons">
            <%= submit_tag("Create Event", class: 'btn btn-default') %>
          </div>

          <%= params[:some_param] %>

      <% end %>
    </div>
  </div>

</div>
